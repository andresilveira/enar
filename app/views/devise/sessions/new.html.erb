<h2>Log In</h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: "form", role: "form"}) do |f| %>

<div class="form-group row">
  <%= f.input :email, :required => true, :autofocus => true, input_html: { class: "form-control" }, label_html: { class: "sr-only"}, wrapper_html: {class: "col-xs-12  col-md-4"}, placeholder: "email" %>
</div><!-- .form-group -->
<div class="form-group row">
  <%= f.input :password,label: "Senha", :required => true, input_html: { class: "form-control" }, label_html: { class: "sr-only"}, wrapper_html: {class: "col-xs-12  col-md-4"}, placeholder: "password" %>  
</div><!-- .form-group -->
<div class="form-group">
  <%= f.input :remember_me, inline_label: "Permanecer Logado", label: false, :as => :boolean if devise_mapping.rememberable? %>  
</div><!-- .form-group -->
<div class="form-group">
  <%= f.button :submit, "Log In", class: "btn-primary" %>  
</div><!-- .form-group -->

<% end %>

<%= render "devise/shared/links" %>
