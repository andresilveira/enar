<h1>Fichas encontradas para: <span class="text-info"><%= params[:name]%></span></h1>
<table class="table table-striped table-hover">
  <tr>
    <th>Nome</th>
    <th>Numero ordem</th>
    <th>Admissao</th>
    <th>Dispensa</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @fichas.each do |ficha| %>
  <tr>
    <td><%= ficha.nome %></td>
    <td><%= ficha.numero_ordem %></td>
    <td><%= ficha.admissao.strftime("%d/%m/%Y") if ficha.admissao %></td>
    <td><%= ficha.dispensa.strftime("%d/%m/%Y") if ficha.dispensa %></td>
    <td><%= link_to 'Mostrar', ficha %></td>
    <td><%= link_to 'Editar', edit_ficha_path(ficha) %></td>
    <td><%= link_to 'Deletar', ficha, confirm: 'Tem Certeza?', method: :delete, class: "btn btn-danger btn-mini"%></td>
  </tr>
<% end %>
</table>

<%= pagination_links(@fichas) %>

<%= link_to "<i class='icon-plus icon-white'> </i> Nova Ficha".html_safe , new_ficha_path, class: "btn btn-primary" %>
