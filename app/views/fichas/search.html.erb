<h1>Fichas encontradas para: <span class="text-info"><%= params[:name]%></span></h1>
<table class="table table-striped table-hover">
  <tr class="row">
    <th></th>
    <th>Nome</th>
    <th>Numero ordem</th>
    <th class="visible-lg">Admissao</th>
    <th class="visible-lg">Dispensa</th>
    <th></th>
  </tr>

  <% @fichas.each do |ficha| %>
  <tr class="clickable-row row" data-link=<%= ficha_url(ficha) %>>
    <td class='col-xs-1'>
      <%= link_to "<span class='glyphicon glyphicon-pencil'></span>".html_safe, edit_ficha_path(ficha), class: "btn btn-default btn-xs" %>
    </td>
    <td class="col-xs-5 col-lg-3"><%= ficha.nome %></td>
    <td class="col-xs-5 col-lg-3"><%= ficha.numero_ordem %></td>
    <td class="visible-lg col-lg-2"><%= ficha.admissao.strftime("%d/%m/%Y") if ficha.admissao %></td>
    <td class="visible-lg col-lg-2"><%= ficha.dispensa.strftime("%d/%m/%Y") if ficha.dispensa %></td>
    <td class='col-xs-1'>
      <%= link_to "<span class='glyphicon glyphicon-remove'></span>".html_safe, ficha, confirm: 'Tem Certeza?', method: :delete, class: "btn btn-danger btn-xs"%>        
    </td>
  </tr>
  <% end %>
</table>

<%= link_to "<span class='glyphicon glyphicon-plus'></span> Nova Ficha".html_safe , new_ficha_path, class: "btn btn-primary" %>

<%= pagination_links(@fichas) %>

