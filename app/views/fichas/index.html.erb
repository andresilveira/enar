<h1>Todas as fichas <%= link_to "<span class='glyphicon glyphicon-download'></span> PDF".html_safe, fichas_path(format: "pdf"), class: "btn btn-default", target: "_blank" %></h1>
<table class="table table-striped table-hover">
  <tr>
    <th>Nome</th>
    <th>Numero ordem</th>
    <th>Admissao</th>
    <th>Dispensa</th>
    <th></th>
  </tr>

<% @fichas.each do |ficha| %>
  <tr>
    <td><%= ficha.nome %></td>
    <td><%= ficha.numero_ordem %></td>
    <td><%= ficha.admissao.strftime("%d/%m/%Y") if ficha.admissao %></td>
    <td><%= ficha.dispensa.strftime("%d/%m/%Y") if ficha.dispensa %></td>
    <td>
      <div class="btn-group">
        <%= link_to 'Mostrar', ficha, class: "btn btn-default btn-xs" %>
        <%= link_to 'Editar', edit_ficha_path(ficha), class: "btn btn-default btn-xs" %>
        <%= link_to 'Deletar', ficha, confirm: 'Tem Certeza?', method: :delete, class: "btn btn-danger btn-xs"%>        
      </div><!-- .btn-group -->
    </td>
  </tr>
<% end %>
</table>

<%= link_to "<span class='glyphicon glyphicon-plus'></span> Nova Ficha".html_safe , new_ficha_path, class: "btn btn-primary" %>

<%= pagination_links(@fichas) %>
