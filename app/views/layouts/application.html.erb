<!doctype html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= content_for?(:title) ? yield(:title) : "Enar" %></title>
  <meta name="description" content="Adm Enar">
  <meta name="author" content="Ri5">
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= yield(:head) %>
</head>
<body>
  <header class="navbar navbar-default navbar-fixed-top" id="header" role="navigation">
    <div class="container">
      <nav class="navbar-header">
        <%= render 'layouts/navigation' %>
      </nav>
      <%= render 'layouts/search_form' if user_signed_in? %>
    </div>
  </header>
  <div role="main">
    <div class="container">
      <div class="content">
        <%= render 'layouts/messages' %>
        <%= yield %>
      </div>
    </div> <!--! end of .container -->
  </div>
</body>
</html>