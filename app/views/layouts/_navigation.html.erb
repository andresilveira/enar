<header class="navbar navbar-default navbar-fixed-top" id="header" role="navigation">
  <div class="container">
    <div class="row">
      <nav class="navbar-header col-xs-12">
        <div class="col-xs-2">
          <%= link_to "Início", root_path, :class => 'navbar-brand' %>
        </div><!-- .col-xs-2 -->
        <%= form_tag :search_fichas, method: :get, class: "form-fix", role: "search" do |f| %>
          <%= label_tag :name, "Nome do funcionário", class: "sr-only" %>
          <div class="col-xs-8">
            <div class="input-group">
              <%= text_field_tag :name, nil, class: "form-control", placeholder: "Nome do funcionário" %>
              <span class="input-group-btn">
                <%= button_tag "<span class='glyphicon glyphicon-search'></span>".html_safe, class: "btn btn-default", type: "submit" %>
              </span>
            </div><!-- .input-group -->
          </div><!-- .col-xs-7 -->
        <% end %>
        <ul class="nav navbar-nav col-xs-2">
          <% if user_signed_in? %>
          <li>
            <%= link_to('Logout', destroy_user_session_path, :method=>'delete' ) %>        
          </li>
          <% else %>
          <li>
            <%= link_to('Login', new_user_session_path)  %>  
          </li>
          <% end %>
        </ul>
      </nav>
    </div><!-- .row -->
</header>